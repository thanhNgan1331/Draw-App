<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D3D0D1" /> <!-- Màu nền khi nhấn -->
            <corners android:radius="20dp" /> <!-- Bo góc -->
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Màu nền bình thường -->
            <corners android:radius="20dp" /> <!-- Bo góc -->
        </shape>
    </item>
</selector>