<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D0D1"
    tools:context=".ActivityPaint">

    <!--Layout Drawing-->
    <com.ptn.test_drawing.DrawView
        android:id="@+id/draw_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:showBorder="true"
        app:showIcons="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9" >

    </com.ptn.test_drawing.DrawView>

    <!--Layout Size Eraser-->
    <LinearLayout
        android:id="@+id/layoutSizeEraser"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutMenu">

        <LinearLayout
            android:id="@+id/layoutTextSizeEraser"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtSizeEraser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Size"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtCountSizeEraser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="@color/black" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBarSizeEraser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="50"
            android:progress="10" />

    </LinearLayout>

    <!--Layout Size and Opacity Pen-->
    <LinearLayout
        android:id="@+id/layoutSizeAndOpacity"
        android:layout_width="301dp"
        android:layout_height="164dp"
        android:layout_marginTop="12dp"
        android:background="#E0E0E0"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutMenu">

        <!--Layout size pen-->
        <LinearLayout
            android:id="@+id/layoutSize"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/layoutTextSize"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Size"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtCountSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBarSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="50"
                android:progress="10" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/layoutOpacity"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/layoutTextOpacity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtOpacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Opacity"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtCountOpacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"

                    android:textAlignment="textEnd"
                    android:textColor="@color/black" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBarOpacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="95" />

        </LinearLayout>

    </LinearLayout>

    <!--Layout Menu-->
    <LinearLayout
        android:id="@+id/layoutMenu"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/customborder"
        android:orientation="horizontal"
        android:padding="0.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:clickable="true"
            android:background="@drawable/selector_btn_menu"
            android:id="@+id/btnMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/menu" />

        <ImageView
            android:id="@+id/btnUndo"
            android:clickable="true"
            android:background="@drawable/selector_btn_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:enabled="false"
            android:src="@drawable/undo_disable" />

        <ImageView
            android:id="@+id/btnRedo"
            android:clickable="true"
            android:background="@drawable/selector_btn_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:enabled="false"
            android:src="@drawable/redo_disable" />

        <ImageView
            android:id="@+id/btnPen"
            android:clickable="true"
            android:background="@drawable/selector_btn_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/pen" />

        <ImageView
            android:id="@+id/btnColor"
            android:clickable="true"
            android:background="@drawable/selector_btn_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/color" />

        <ImageView
            android:id="@+id/btnEraser"
            android:clickable="true"
            android:background="@drawable/selector_btn_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/eraser"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/btnFullScreenHide"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_menu"
            android:clickable="true"
            android:src="@drawable/full_screen"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <!--Button Full Screen-->
    <ImageView
        android:id="@+id/btnFullScreenShow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_menu"
        android:clickable="true"
        android:src="@drawable/full_screen"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <!--List Item Menu-->
    <ListView
        android:id="@+id/listMenu"
        android:layout_width="200dp"
        android:layout_height="305dp"
        android:background="#E0E0E0"
        android:divider="@drawable/border_listview"
        android:dividerHeight="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutMenu" />

    <!--Layout Shape-->
    <LinearLayout
        android:id="@+id/shapeLayout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#E0E0E0"
        android:orientation="horizontal"
        android:padding="0.5dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutMenu">

        <ImageView
            android:id="@+id/btnCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cricle" />

        <ImageView
            android:id="@+id/btnRect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/square" />

        <ImageView
            android:id="@+id/btnLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/draw_line" />

    </LinearLayout>

    <!-- List Item For New -->
    <ListView
        android:id="@+id/listItemForNew"
        android:layout_width="193dp"
        android:layout_height="108dp"
        android:background="#E0E0E0"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutMenu" />

    <!--Layout Text-->
    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#E0E0E0"
        android:orientation="horizontal"
        android:padding="0.5dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutMenu">

        <ImageView
            android:id="@+id/btnCloseEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/close_edit_text" />

        <ImageView
            android:id="@+id/btnAddText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/font" />

        <ImageView
            android:id="@+id/btnAddSticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/smiley" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>