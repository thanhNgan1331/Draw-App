<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D0D1"
    tools:context=".ActivityPaint">

    <GridView
        android:id="@+id/gridView"
        android:layout_width="233dp"
        android:layout_height="175dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:numColumns="3"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:stretchMode="columnWidth"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutMenu" />

    <LinearLayout
        android:id="@+id/layoutSizeAndOpacity"
        android:layout_width="300dp"
        android:layout_height="540dp"

        android:layout_marginTop="12dp"
        android:background="#E3D7D7"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutMenu">

        <LinearLayout
            android:id="@+id/layoutSize"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/layoutTextSize"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Size"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtCountSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBarSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="50"
                android:progress="10" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/layoutOpacity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/layoutTextOpacity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtOpacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Opacity"

                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtCountOpacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"

                    android:textAlignment="textEnd"
                    android:textColor="@color/black" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBarOpacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="200" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMenu"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/customborder"
        android:orientation="horizontal"
        android:padding="0.5dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:clickable="true"
            android:background="@drawable/selector_btn_menu"
            android:id="@+id/btnMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/menu" />

        <ImageView
            android:id="@+id/btnUndo"
            android:clickable="true"
            android:background="@drawable/selector_btn_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/undo_disable" />

        <ImageView
            android:id="@+id/btnRedo"
            android:clickable="true"
            android:background="@drawable/selector_btn_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/redo_disable" />

        <ImageView
            android:id="@+id/btnPen"
            android:clickable="true"
            android:background="@drawable/selector_btn_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/pen" />

        <ImageView
            android:id="@+id/btnColor"
            android:clickable="true"
            android:background="@drawable/selector_btn_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/color" />

        <ImageView
            android:id="@+id/btnNew"
            android:clickable="true"
            android:background="@drawable/selector_btn_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/new_page"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/btnFullScreenHide"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_menu"
            android:clickable="true"
            android:src="@drawable/full_screen"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnFullScreenShow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_menu"
        android:clickable="true"
        android:src="@drawable/full_screen"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.ptn.test_drawing.DrawView
        android:id="@+id/draw_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.889" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="193dp"
        android:layout_height="108dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutMenu" />
</androidx.constraintlayout.widget.ConstraintLayout>