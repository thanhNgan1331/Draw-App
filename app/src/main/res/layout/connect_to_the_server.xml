<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_por"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtHeader"
            style="@style/loginHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="40dp"
            android:text="Connect To\nThe Server" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputIPv4"
            style="@style/parent"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/txtIP"
                style="@style/modifiedEditIP"
                android:layout_marginTop="50dp"
                android:hint="IPv4"
                android:maxLines="1"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputPort"
            style="@style/parent"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/txtPort"
                style="@style/modifiedEditIP"
                android:hint="PORT"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtProcessing"
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@drawable/text_color"/>
        <Button
            android:id="@+id/btnConnect"
            style="@style/loginButton"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:text="Connect" />

        <TextView
            android:id="@+id/txtContinueWithoutConnection"
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:text="Continue without connection"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:textColor="@drawable/text_color"/>

        <TextView
            android:id="@+id/txtScanQR"
            style="@style/parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:text="Scan QR to connect"
            android:textAlignment="textEnd"
            android:textColor="@drawable/text_color"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>